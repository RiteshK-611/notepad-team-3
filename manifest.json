{

  "manifest_version": 2,
  "name": "Notepad",
  "version": "1.0",

  "description": "Allows users to take notes in a sidebar on a web page. Any notes will be saved and visible for the next time the page is visited.",
  "homepage_url": "https://github.com/nyu-ossd-s19/text-highlighter-team-3",
  "icons": {
    "48": "icons/note.svg"
  },

  "permissions": [
    "storage",
    "tabs"
  ],

  "sidebar_action": {
    "default_panel": "note.html",
    "default_icon": "icons/note.svg",
    "default_title" : "Notepad"
  },

  "commands": {
    "_execute_sidebar_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y"
      }
    }
  }

}

